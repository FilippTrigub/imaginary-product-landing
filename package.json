{
  "name": "novasphere-landing-page",
  "version": "2.0.0",
  "description": "NovaSphere - The Future of Personal Computing Landing Page",
  "main": "main.js",
  "scripts": {
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "landing-page",
    "novasphere",
    "holographic",
    "computing"
  ],
  "author": "NovaSphere Inc.",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!test.spec.js",
      "!coverage/**",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/*.spec.js",
      "**/*.test.js"
    ],
    "verbose": true
  }
}
